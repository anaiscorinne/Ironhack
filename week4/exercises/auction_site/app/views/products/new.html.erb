<h1>List a new product!</h1>
<ul>
<% if @product.errors.any? %>
	<% @product.errors.full_message.each do |error_msg| %>
		<li><%= error_msg %></li>
	<% end %>
<% end %>
</ul>

<%= form_for [@user, @product] do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	<%= f.label :amount %>
	<%= f.number_field :amount %>
	<br>
	<%= f.submit "Save" %>
	<br>
	<%= link_to("Cancel", users_path) %>
	<%= link_to("Home", "/") %>


<% end %>