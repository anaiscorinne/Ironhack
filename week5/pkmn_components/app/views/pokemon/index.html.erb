<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name"></span>
          <small class="js-pkmn-number"></small>
          <dd class="js-pkmn-image"></dd><br>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          
          <dt></dt>
          <dd></dd>
          <dt>Description:</dt>
          <dd class="js-pkmn-description"></dd>
          <dt>Height:</dt>
          <dd class="js-pkmn-height">23</dd>

          <dt>Weight</dt>
          <dd class="js-pkmn-weight">888</dd>
          <br>
        </dl>
        <dl class="dl-horizontal">
          <dt>Hit points:</dt>
          <dd class="js-pkmn-hp">888</dd>
          <dt>Attack:</dt>
          <dd class="js-pkmn-attack">888</dd>
          <dt>Defense:</dt>
          <dd class="js-pkmn-defense">888</dd>
          <dt>Special Attack:</dt>
          <dd class="js-pkmn-sp-att">888</dd>
          <dt>Special Defense:</dt>
          <dd class="js-pkmn-sp-def">888</dd>
          <br>
          <dt>Types:</dt>
          <dd>
           <ul class="js-pkmn-types">
           </ul>
          </dd>
        </dl>
      </div><!-- .modal-body -->
      <div class="modal-footer">
        <button class="js-ev-button">See Evolutions</button><br><br>
      </div>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->


<!-- EVOLUTION MODAL -->

<div class="modal fade js-ev-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title js-ev-title">
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <h3 class="js-ev-loading">loading evolutions...</h3>
          <ul class="js-ev-list"></ul>
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->